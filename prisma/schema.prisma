generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @unique @default(uuid())
  name     String
  email    String @unique
  password String

  hoursToPay ServiceHours[]
}

model ServiceHours {
  id           String   @id @unique @default(uuid())
  collaborator String
  initialDate  DateTime
  finalDate    DateTime
  daytimeHours Int
  nightHours   Int
  daytimePrice Float
  nightPrice   Float
  amount       Float
  userId       String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
